//******************************************************************************
//	OpenGL 3.2
//******************************************************************************
#version 150

//******************************************************************************
//	Input
//******************************************************************************
in vec4 position;

//******************************************************************************
//	Uniform variables
//******************************************************************************
uniform mat4 matrix;

//-------------
void main(void)
//-------------
{
	//output: the position of the vertex for the map
	gl_Position =  matrix * position;
}
